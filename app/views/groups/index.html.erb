<div class="wrapper">
  <header>
    <div class="header-top">
      <div class="header-top__left">
        <p class="title">Group</p>
      </div>
      <div class="header-top__right">
        <div class="to-group">
          <%= link_to "NewGroup", new_group_path, class: "n-btn" %>
        </div>
      </div>
    </div>
    <div class="header-bottom">
      <%= link_to accounts_path do %>
        <i class="fas fa-user-alt icon"></i>
      <% end %>
      <%= link_to tweets_path do %>
        <i class="far fa-comment-dots icon"></i>
      <% end %>
      <%= link_to groups_path do %>
        <i class="far fa-object-group icon color"></i>
      <% end  %>
      <%= link_to articles_path do %>
        <i class="far fa-sticky-note icon"></i>
      <% end %>
    </div>
  </header>
  <main>
    <div class="main-contents">
      <div class="left-contents">
        <p>Your friends:</p>
        <% @users.each do |user| %>
          <%= link_to account_path(user.id) do %>
            <div class="g-user-name">
              <%= user.name %>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="right-contents scroll-container">
        <% current_user.groups.each do |group| %>
          <div class="group-container">
            <%= link_to group_messages_path(group) do %>
              <div class="group-image">
                <%= image_tag "https://cdn1.iconfinder.com/data/icons/user-experience/512/meeting-512.png", class: "group-image__top" %>
              </div>
              <div class="group-name">
                <%= group.name %>
              </div>
            <% end %>
            <div class="group-time">
              <%= group.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
            </div>
            <div class="group-last-message">
              <%= group.show_last_message %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </main>
</div>
